#10
x = int(input("Enter your number :"))
for i in range(x):
  for y in range(x-i-1):
    print(" ",end="")
  for z in range(2*i+1):
    print("*",end="")
  print()
for i in range(x-1,0,-1):
  for y in range(x,i,-1):
    print(" ",end="")
  for z in range(2*i-1,0,-1):
    print("*",end="")
  print()
